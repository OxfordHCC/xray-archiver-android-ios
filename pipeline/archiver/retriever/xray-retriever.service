[Unit]
Description=Google Play App Data retriever for the xray project.

[Service]
Environment=NODE_ENV=production

WorkingDirectory=/usr/local/lib/xray/archiver/retriever
ExecStart=/usr/bin/node /usr/local/lib/xray/archiver/retriever/retriever.js
#ExecStop=?
User=xray
Group=xray
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
