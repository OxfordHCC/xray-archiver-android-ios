[Unit]
Description=Google Play Store APK downloader for the xray project.

[Service]
Environment=NODE_ENV=production

WorkingDirectory=/usr/local/lib/xray/archiver/downloader
ExecStart=/usr/bin/node /usr/local/lib/xray/archiver/downloader/downloader.js
#ExecStop=?
User=xray
Group=xray
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
