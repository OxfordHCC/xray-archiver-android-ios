[Unit]
Description=The app scraper for the XRay project
Requires=xray-analyzer.service

[Service]
Environment=NODE_ENV=production

WorkingDirectory=/usr/local/lib/xray/scraper
ExecStart=/usr/bin/node /usr/local/lib/xray/scraper/scrape.js
#ExecStop=?
User=xray
Group=xray
Type=simple
Restart=always

[Install]
WantedBy=multi-user.target
